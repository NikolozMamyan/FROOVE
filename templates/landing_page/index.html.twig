{% block stylesheets %}
    {{ parent() }}
    <style>
    :root {
    --primary: #6C63FF;
    --secondary: #8B5CF6;
    --text-dark: #2D3436;
    --text-light: #636E72;
    --bg-light: #F5F6FA;
    --white: #FFFFFF;
    --shadow-sm: 0 2px 8px rgba(0, 0, 0, 0.05);
    --shadow-md: 0 4px 12px rgba(0, 0, 0, 0.08);
    --shadow-lg: 0 8px 25px rgba(0, 0, 0, 0.1);
    --gradient: linear-gradient(135deg, #6C63FF, #8B5CF6);
    --radius-sm: 12px;
    --radius-md: 16px;
    --radius-lg: 20px;
}
/* Style des boutons */
.btn {
    padding: 0.8rem 1.5rem;
    border-radius: var(--radius-sm);
    transition: all 0.3s ease;
    font-weight: 600;
    letter-spacing: 0.5px;
}

.btn-primary {
    background: var(--gradient);
    border: none;
    box-shadow: var(--shadow-sm);
}

.btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
    background: linear-gradient(135deg, #7a74ff, #9d75ff);
}

.btn-outline-primary {
    border: 2px solid var(--primary);
    color: var(--primary);
    background: transparent;
}

.btn-outline-primary:hover {
    background: var(--gradient);
    border-color: transparent;
    color: var(--white);
    transform: translateY(-2px);
}
      .hero {
    background: var(--gradient);
    position: relative;
    padding: 6rem 0;
}

.hero {
    /* AmÃ©liorer le contraste */
    --overlay-color: rgba(0, 0, 0, 0.4);
    position: relative;
}

.hero::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.15);
    z-index: 1;
}

.hero .container {
    position: relative;
    z-index: 2;
}

.hero h1 {
    animation: fadeInUp 1s ease-out;
}

.hero .lead {
    animation: fadeInUp 1s ease-out 0.2s;
}

.hero .btn {
    animation: fadeInUp 1s ease-out 0.4s;
}
.hero .btn {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.hero .btn:hover {
    transform: scale(1.05);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
}

.hero .btn:active {
    transform: scale(0.95);
}

@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}
.activity-card {
    border-radius: var(--radius-md);
    background: var(--white);
    transition: all 0.3s ease;
    overflow: hidden;
}

.activity-card:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-lg);
}

.activity-card .badge {
    background: var(--gradient);
    padding: 0.5rem 1rem;
    border-radius: var(--radius-sm);
    font-weight: 500;
}

.activity-card .points {
    color: var(--primary);
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}
.features .card {
    border-radius: var(--radius-md);
    transition: all 0.3s ease;
}

.features .card:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-md);
}

.features .bi {
    background: var(--gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
}
/* Typographie */
body {
    color: var(--text-dark);
    line-height: 1.6;
}

h1, h2, h3, h4, h5, h6 {
    font-weight: 700;
}

/* Espacements */
section {
    padding: 5rem 0;
}

/* Animation au scroll */
.fade-up {
    opacity: 0;
    transform: translateY(20px);
    transition: all 0.6s ease;
}

.fade-up.visible {
    opacity: 1;
    transform: translateY(0);
}

.hero h1 {
    animation: fadeInUp 1s ease-out;
}

.hero .lead {
    animation: fadeInUp 1s ease-out 0.2s;
}

.hero .btn {
    animation: fadeInUp 1s ease-out 0.4s;
}
.revolution {
    background-color: var(--bg-light);
}

.revolution .benefits p {
    position: relative;
    padding-left: 2rem;
    font-size: 1.1rem;
}

.revolution .card {
    border-radius: var(--radius-md);
    transition: all 0.3s ease;
}

.revolution .card:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-md);
}

.testimonial .card {
    background: linear-gradient(135deg, rgba(108, 99, 255, 0.05), rgba(139, 92, 246, 0.05));
}

.testimonial .lead {
    font-style: italic;
    color: var(--text-dark);
}

@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}
    </style>
{% endblock %}