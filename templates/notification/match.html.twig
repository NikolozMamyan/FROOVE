{% extends 'base.html.twig' %}

{% block body %}
<div class="container text-center" style="margin-top:90px;">
    <!-- Section des photos -->
    <div class="d-flex justify-content-center align-items-center container mb-4" style="position:relative; width:350px;">
        <!-- Photo de gauche -->
        <img src="https://picsum.photos/200" 
             class="rounded-circle me-2" 
             alt="{{ sender.fullName }}" 
             style="width: 130px; height: 130px; object-fit: cover; position:absolute; left:65px;">
        
        <!-- Icône cœur -->
        <div class="d-flex justify-content-center align-items-center mx-3">
            <img src="{{ asset('/img/icones/match.svg') }}" 
                 alt="Heart Icon" style="width:60px; z-index:1;">
        </div>
        
        <!-- Photo de droite -->
        <img src="https://picsum.photos/200" 
             class="rounded-circle ms-2" 
             alt="{{ recipient.fullName }}" 
             style="width: 130px; height: 130px; object-fit: cover; position:absolute; right:55px;">
    </div>

    <!-- Texte principal -->
    <h1 style="margin-top:90px; color: #EF3672; font-weight: bold;">Congrats, It's a Match!</h1>
    <p class="mt-3" style="color: #666; font-size: 16px;">Start a conversation with each other now.</p>

    <!-- Section des boutons -->
    <div class="mt-4">
        <!-- Bouton Send Message -->
        <a href="{{ path('app_chat_send', { id: sender.id }) }}" 
           class="btn btn-primary px-5 py-2 w-100" 
           style="background-color: #EF3672; border-color: #EF3672; font-weight: bold; font-size: 16px; border-radius:30px;">
            Send Message
        </a>
        <!-- Bouton Keep Playing -->
        <a href="{{ path('app_ads') }}" 
           class="btn btn-outline-primary px-5 py-2 mt-3 w-100" 
           style="color: #EF3672; border-color: #EF3672; font-weight: bold; font-size: 16px; border-radius:30px;">
            Keep Playinga
        </a>
    </div>
</div>
{% endblock %}
