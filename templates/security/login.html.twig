{% extends 'base.html.twig' %}

{% block body %}
<style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            margin: 0;
        }

        .login-container {
            width: 100%;
            max-width: 400px;
            padding: 20px;

            border-radius: 10px;
            position: relative;
        }

        .back-arrow {
            position: absolute;
            top: 15px;
            left: 15px;
            font-size: 20px;
            color: #666;
            cursor: pointer;
            text-decoration: none;
        }

        .back-arrow:hover {
            color: #000;
        }

        .login-container h1 {
            font-size: 24px;
            margin-bottom: 10px;
            text-align: left;
        }

        .login-container p {
            color: #666;
            margin-bottom: 20px;
            text-align: left;
        }

        .login-container input[type="text"],
        .login-container input[type="password"] {
            width: 100%;
            padding: 12px;
            margin-bottom: 15px;
            border: 1px solid #ccc;
            border-radius: 25px;
            box-sizing: border-box;
        }

        .login-container .btn {
            display: block;
            width: 100%;
            padding: 12px;
            font-size: 16px;
            color: #fff;
            border: none;
            border-radius: 25px;
            cursor: pointer;
            margin-bottom: 15px;
            box-sizing: border-box;
        }

        .login-container .btn-primary {
            background-color: #ff3d81;
        }

        .login-container .btn-secondary {
            background-color: #1877f2;
        }

        .login-container .btn-light {
            background-color: #f9f9f9;
            color: #666;
            border: 1px solid #ccc;
            margin-bottom: 0;
        }

        .login-container a {
            color: #666;
            text-decoration: none;
            font-size: 14px;
            text-align: left;
            display: block;
        }

        .login-container a:hover {
            text-decoration: underline;
        }

        .divider {
            position: relative;
            margin: 15px 0;
            text-align: center;
            color: #aaa;
        }

        .divider::before,
        .divider::after {
            content: '';
            position: absolute;
            width: 40%;
            height: 1px;
            background: #ddd;
            top: 50%;
        }

        .divider::before {
            left: 0;
        }

        .divider::after {
            right: 0;
        }

        .terms {
            text-align: center;
            display: block;
            margin-top: 10px;
        }
</style>


     <div class="login-container">
 <a href="{{path('app_home')}}" class="back-arrow"><img src="{{ asset('/img/icones/arrow.svg') }}"/></a>
        <h1 class="fs-6 fw-bold text-center">Login</h1>
           

        <h2 class="fw-bold mt-5">Welcome Back</h2>
        <p>Sign in to continue</p>

        <form method="post" class="mt-5">
            <input type="text" name="email" placeholder="  User Name" required>
<div data-controller="password-visibility" style="position: relative;">
    <input id="password" type="password" name="password" placeholder="   Password"
           class="form-control" data-password-visibility-target="password">
    <i id="togglePassword" class="fas fa-eye"
       data-action="click->password-visibility#toggleVisibility"
       data-password-visibility-target="toggle"
       style="position: absolute; right: 15px; top: 50%; transform: translateY(-50%); cursor: pointer;">
    </i>
</div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <button type="submit" class="btn btn-primary mt-4">Log in</button>
        </form>

        <div class="divider">or</div>

        <button class="btn btn-secondary">Sign up with Facebook</button>
        <button class="btn btn-light mt-4">Sign up with Email</button>

        <a href="#" class="terms text-center mt-5">Terms of use & Privacy Policy</a>
    </div>
{% endblock %}
