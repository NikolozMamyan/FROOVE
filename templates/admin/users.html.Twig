{# templates/admin/users.html.twig #}
{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des utilisateurs{% endblock %}
{% block header_title %}Gestion des utilisateurs{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nom complet</th>
                        <th>Email</th>
                        <th>Points</th>
                        <th>Pays</th>
                        <th>Vérifié</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.id }}</td>
                            <td>{{ user.fullName }}</td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.points }}</td>
                            <td>{{ user.country }}</td>
                            <td>
                                {% if user.isVerified %}
                                    <span class="badge bg-success">Oui</span>
                                {% else %}
                                    <span class="badge bg-danger">Non</span>
                                {% endif %}
                            </td>
                            <td>
                                <a href="{{ path('admin_user_edit', { id: user.id }) }}" class="btn btn-sm btn-primary">Modifier</a>
                                <a href="{{ path('admin_user_delete', { id: user.id }) }}" onclick="return confirm('Êtes-vous sûr ?');"  class="btn btn-sm btn-danger">Supprimer</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}