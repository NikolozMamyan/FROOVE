{% extends 'base.html.twig' %}

{% block title %}Mes Contacts{% endblock %}

{% block stylesheets %}
    <style>
        .contacts-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            padding: 20px;
        }

        .contact-card {
            background: #f9f9f9;
            border: 1px solid #e0e0e0;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            padding: 20px;
            text-align: center;
            transition: all 0.3s ease;
        }

        .contact-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 10px rgba(0, 0, 0, 0.15);
        }

        .contact-name {
            font-size: 1.2em;
            font-weight: 600;
            margin-bottom: 10px;
            color: #333;
        }

        .last-message {
            font-size: 0.9em;
            color: #666;
            margin-bottom: 20px;
        }

        .open-chat-btn {
            display: inline-block;
            background: #007BFF;
            color: white;
            padding: 8px 16px;
            border-radius: 20px;
            text-decoration: none;
            font-size: 0.9em;
            transition: background 0.3s ease;
        }

        .open-chat-btn:hover {
            background: #0056b3;
        }

        .no-contacts {
            text-align: center;
            font-size: 1.1em;
            color: #888;
            margin-top: 50px;
        }
        .nm-Button{
    position: relative;
    display: inline-block;
    padding: 10px 15px;
    text-align: center;
    font-size: 18px;
    letter-spacing: 1px;
    text-decoration: none;
    color: #00B894;
    background: transparent;
    cursor: pointer;
    transition: ease-out 0.5s;
    border: 2px solid #00B894;
    border-radius: 10px;
    box-shadow: inset 0 0 0 0 #00B894;
}
.nm-Button:hover {
    color: white;
    box-shadow: inset 0 -100px 0 0 #00B894;
}
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center" style="margin-bottom: 30px;">Mes Contacts</h1>

        {% if contactData|length > 0 %}
            <div class="contacts-container">
                {% for data in contactData %}
                    <div class="contact-card">
                        <div class="contact-name">{{ data.contact.fullName }}</div>
                        <div class="last-message">
                            <strong>Dernier message :</strong><br>
                            {{ data.lastMessage }}
                        </div>
                        <a href="{{ path('app_chat_send', {'id': data.contact.id}) }}" class="nm-Button">
                            üó®Ô∏è Ouvrir la conversation
                        </a>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="no-contacts">
                Aucun contact disponible pour le moment.
            </div>
        {% endif %}
    </div>
{% endblock %}
